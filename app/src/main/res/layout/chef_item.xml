<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    app:cardElevation="10dp"
    app:cardCornerRadius="0dp"
    android:layout_marginBottom="8dp"
    >
    <RelativeLayout
        android:layout_width="400dp"
        android:layout_height="match_parent"
        android:background="#f2f2f2"
        >
        <ImageView
            android:id="@+id/chef_image"
            android:layout_width="194dp"
            android:layout_height="151dp"
            android:layout_alignBottom="@+id/chef_name"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="202dp"
            android:layout_marginBottom="-42dp"
            android:scaleType="centerCrop"
            android:src="@drawable/logo_chow" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="232dp"
            android:layout_marginEnd="144dp"
            android:layout_marginBottom="116dp"
            android:src="@drawable/ic_baseline_location_on_24" />
        <TextView
            android:id="@+id/chef_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="78dp"
            android:layout_marginBottom="115dp"
            android:text="1.3 miles" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="144dp"
            android:layout_marginBottom="50dp"
            android:src="@drawable/ic_baseline_av_timer_24"
            />
        <TextView
            android:id="@+id/chef_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="59dp"
            android:layout_marginBottom="52dp"
            android:text="35 - 50 mins" />
        <TextView
            android:id="@+id/chef_rating"
            android:layout_width="137dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="264dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="85dp"
            android:text="4.1 Very Good (50+)" />
        <ImageView
            android:layout_width="260dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="-42dp"
            android:layout_marginBottom="145dp"
            android:src="@drawable/delivery_green" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="145dp"
            android:layout_marginBottom="83dp"
            android:src="@drawable/ic_baseline_star_24"
            />
        <TextView
            android:id="@+id/chef_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="73dp"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:text="Name of Food"
            android:textColor="@android:color/transparent"
            android:textSize="30sp"
            android:textStyle="bold" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>